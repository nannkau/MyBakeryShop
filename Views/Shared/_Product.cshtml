    @model Product
    @using System.Globalization;

    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="@Model.ImageThumbnailUrl" asp-append-version="true">
            <div class="caption">
                <h3 class="pull-right">@Model.Price.ToString("c", CultureInfo.CreateSpecificCulture("en-IN"))</h3>
                <h3>
                    <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.ProductId">
                        @Model.Name
                    </a>
                </h3>
                <p>@Model.ShortDescription</p>
                 <div class="addToCart">
                <p class="button">
                    <a class="btn btn-primary" 
                       asp-controller="ShoppingCart" 
                       asp-action="AddToShoppingCart"
                       asp-route-productId="@Model.ProductId">Add to cart</a>
                </p>
            </div>
            </div>
        </div>
    </div>