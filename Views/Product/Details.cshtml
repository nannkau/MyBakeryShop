@model Product
@using System.Globalization;

<h2>@Model.Name</h2>

<div class="thumbnail">
    <img alt="@Model.Name" src="@Model.ImageThumbnailUrl" class="img-thumbnail">
    <div class="caption-full">
        <h3 class="pull-right">
            @Model.Price.ToString("c", CultureInfo.CreateSpecificCulture("en-IN"))
         </h3>
        
        <h3>
            <a href="#">@Model.Name</a>
        </h3>
        <h4>@Model.ShortDescription</h4>
        <p>@Model.LongDescription</p>
    </div>
</div>